/*
Write a JavaScript function isPrime(value) that checks if an integer number is prime.
 Write JS program primeChecker.js that checks if a few numbers are prime. The result
 should be printed on the console (true or false) on the console. Run the program 
 through Node.js. 
*/

isPrime(7);
isPrime(254);
isPrime(587);

function isPrime(a){
	var count = 0;
	
	for(var i=2; i<a; i++){
		if(a%i == 0){
			count = count +1;
		}
	}
	if(count>0){
		console.log(false);
	} else{
		console.log(true);
	}
}
